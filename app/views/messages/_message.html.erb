<div class="massage">
  <div class="name-date">
    <div class="name-"><%= message.user.name %></div>
    <div class="date"><%= l message.created_at %></div>
  </div>
  <div class="lower-message">
    <div class="word"><%= message.content %></div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>
