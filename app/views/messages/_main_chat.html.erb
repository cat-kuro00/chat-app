<div class="chat">
  <div class="main-header">
    <div class="main-room">hogefuga</div>
    <div class="exit"><a href="#">チャットを終了する</a></div>
  </div>
  <div class="massages">
    <div class="massage">
      <div class="name-date">
        <div class="name-">Tom</div>
        <div class="date">2020/3/31(Wed) 12:43:30</div>
      </div>
      <div class="word">おはよう</div>
    </div>
    <div class="massage">
      <div class="name-date">
        <div class="name-">Tom</div>
        <div class="date">2020/3/31(Wed) 12:43:30</div>
      </div>
      <div class="word">こ</div>
    </div>
  </div>
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
    <div class="form-input">
      <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'form-submit' %>
  <% end %>
</div>